<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TALK"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#6B66FF"
            android:onClick="TalkClicked"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/talkOutput_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Your voice is recorded as text"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#2a2a2a"
                android:scrollbars="vertical"/>

        </ScrollView>

        <EditText
            android:id="@+id/speechInput_EditTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:hint="Enter the text you want to speak"
            android:textColorHint="#8C8C8C"
            android:textSize="15dp"
            android:textColor="#2a2a2a"
            android:background="#FFD8D8"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SPEECH"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#F15F5F"
            android:onClick="SpeechClicked"/>

    </LinearLayout>

</RelativeLayout>