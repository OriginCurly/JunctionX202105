<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">

        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="21.5dp"/>

        <Button
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21.5dp"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:onClick="BackClicked"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_back"
            android:textColor="@color/basic_bright"
            android:textSize="16dp"
            android:layout_marginStart="48dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="16dp"
                android:text="@string/tts_destination"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/basic_400"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:background="@color/basic_500"/>

            <TextView
                android:id="@+id/tts_ready_Txt"
                android:layout_width="match_parent"
                android:layout_height="436dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/tts_listening"
                android:textSize="44dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/basic_bright"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tts_result_Txt"
                android:layout_width="match_parent"
                android:layout_height="436dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="44dp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/basic_accent"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tts_bg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150dp"
            android:background="@color/transparent"
            android:onClick="OKClicked"/>

        <ImageView
            android:src="@drawable/ic_mic_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="180dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@color/transparent"
            android:onClick="MicClicked"/>

    </RelativeLayout>


</LinearLayout>